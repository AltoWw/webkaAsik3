<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Project</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Weather Project</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Admin Panel</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/nasa">NASA API</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/currency">Currency Converter</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/login">Login</a>
                  </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <header class="text-center">
            <h2>Welcome to Home page</h2>
        </header>
        <main>
            <form id="weather-form" class="mb-4">
                <div class="form-group">
                    <label for="city">Enter City:</label>
                    <input type="text" class="form-control" id="city" name="city" required>
                </div>
                <button type="button" class="btn btn-primary" onclick="getWeather()">Get Weather</button>
            </form>
            <div id="weather-results" class="result-container"></div>
        </main>

        <footer class="mt-4 text-center">
            <p>Created by Altynbek</p>
            <p>from group SE-2203</p>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
        function getWeather() {
            const city = document.getElementById('city').value;

            fetch(`/weather?city=${city}`)
                .then(response => response.text())
                .then(data => {
                    document.getElementById('weather-results').innerHTML = data;
                })
                .catch(error => console.error('Error fetching weather data:', error));
        }
    </script>
</body>
</html>
