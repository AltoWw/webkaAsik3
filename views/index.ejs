<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Project</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <nav>
    <div class="container">
      <h1>Welcome</h1>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/login">Login</a></li>
        <li><a href="/admin">Admin Panel</a></li>
        <li><a href="/nasa">NASA API</a></li>
        <li><a href="/currency">Currency Converter</a></li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <header>
      <h2>Welcome to Your Project</h2>
    </header>
    <main>
      <form id="weather-form">
        <label for="city">Enter City:</label>
        <input type="text" id="city" name="city" required>
        <button type="button" onclick="getWeather()">Get Weather</button>
      </form>
      <div id="weather-results" class="result-container"></div>

      <div class="api-info">
        <h2>OpenWeather API</h2>
      </div>
    </main>

    <footer>
      <p>Created by Altynbek</p>
      <p>from group SE-2203</p>
    </footer>
  </div>

  <script>
    function getWeather() {
      const city = document.getElementById('city').value;

      fetch(`/weather?city=${city}`)
        .then(response => response.text())
        .then(data => {
          document.getElementById('weather-results').innerHTML = data;
        })
        .catch(error => console.error('Error fetching weather data:', error));
    }
  </script>

</body>
</html>
